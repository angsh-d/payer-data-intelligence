modules = ["python-3.12", "bash", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"python -m uvicorn backend.main:app --host 0.0.0.0 --port 5001 --reload & cd frontend && npm run dev\""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 5002
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cp -r frontend/dist backend/static 2>/dev/null; python -m uvicorn backend.main:app --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd frontend && npm run build"]
